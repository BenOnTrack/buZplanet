{
	"name": "buzplanet",
	"private": true,
	"version": "0.0.43",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:vite": "vite dev",
		"build": "NODE_OPTIONS=--max-old-space-size=8192 vite build",
		"build:dev": "vite build --mode development",
		"preview": "wrangler dev --compatibility-date=2024-12-19 --compatibility-flags=nodejs_compat --port 4173",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"gen": "wrangler types",
		"deploy": "NODE_OPTIONS=--max-old-space-size=8192 npm run version:patch && npm run build && wrangler deploy",
		"deploy:production": "npm run version:patch && npm run build && wrangler deploy --env production",
		"version:patch": "node scripts/bump-version.mjs patch",
		"version:minor": "node scripts/bump-version.mjs minor",
		"version:major": "node scripts/bump-version.mjs major"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.9.1",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^6.0.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"wrangler": "^4.60.0"
	},
	"dependencies": {
		"@mapbox/vector-tile": "^2.0.4",
		"@sqlite.org/sqlite-wasm": "^3.49.1-build4",
		"bits-ui": "^2.15.5",
		"p-defer": "^4.0.1",
		"pbf": "^4.0.1",
		"phosphor-svelte": "^3.1.0",
		"svelte-maplibre": "^1.2.6",
		"tailwindcss-animate": "^1.0.7",
		"vaul-svelte": "^1.0.0-next.7"
	},
	"lint-staged": {
		"*.{js,ts,svelte,css,md,json,yaml,yml}": [
			"prettier --write"
		]
	}
}
